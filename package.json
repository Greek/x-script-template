{
  "name": "glow",
  "version": "1.0.0",
  "description": "A template for projects.",
  "main": "index.js",
  "repository": "https://github.com/Greek/x-script-template",
  "author": "Andreas <me@apap04.com>",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc ./**/*.ts",
    "lint": "eslint ./**/*.{js,jsx,ts,tsx}",
    "types": "yarn tsc --noEmit",
    "format": "pretty-quick --staged",
    "format-all": "prettier --write ./**/*.{js,jsx,ts,tsx,json}",
    "prepare": "husky install"
  },
  "prettier": "@charted/prettier-config",
  "devDependencies": {
    "@charted/prettier-config": "^1.0.1",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
